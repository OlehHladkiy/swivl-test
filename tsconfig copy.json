{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@store/*": ["store/*"]
    },
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}